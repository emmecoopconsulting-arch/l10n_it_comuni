<odoo>
  <record id="ir_cron_l10n_it_comuni_refresh" model="ir.cron">
    <field name="name">Aggiorna Comuni da sorgente</field>
    <field name="active">True</field>

    <!-- ogni 1 settimana -->
    <field name="interval_number">1</field>
    <field name="interval_type">weeks</field>

    <!-- richiesti in v18 quando state='code' -->
    <field name="state">code</field>
    <field name="model_id" ref="base.model_ir_cron"/>
    <field name="user_id" ref="base.user_admin"/>

    <field name="code">
      env['ir.module.module']._call_function('l10n_it_comuni.hooks','load_comuni_from_source')
    </field>
  </record>
</odoo>