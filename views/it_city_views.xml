<odoo>
  <record id="view_it_city_list" model="ir.ui.view">
    <field name="name">it.city.tree</field>
    <field name="model">it.city</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/><field name="istat_code"/><field name="province_code"/>
        <field name="province_name"/><field name="region_name"/><field name="cap"/>
        <field name="cadastral_code"/><field name="population"/>
      </list>
    </field>
  </record>

 <record id="view_it_city_search" model="ir.ui.view">
    <field name="name">it.city.search</field>
    <field name="model">it.city</field>
    <field name="arch" type="xml">
      <search>
        <field name="name"/>
        <field name="istat_code"/>
        <field name="province_code"/>
        <field name="province_name"/>
        <field name="region_name"/>
        <field name="cap"/>
        <filter name="has_cap" string="CAP presente" domain="[('cap','!=',False)]"/>
        <group expand="0" string="Raggruppa per">
          <filter name="grp_region" string="Regione" context="{'group_by':'region_name'}"/>
          <filter name="grp_province" string="Provincia" context="{'group_by':'province_name'}"/>
          <filter name="grp_sigla" string="Sigla" context="{'group_by':'province_code'}"/>
        </group>
      </search>
    </field>
  </record>

  <record id="action_it_city" model="ir.actions.act_window">
    <field name="name">Comuni d'Italia</field>
    <field name="res_model">it.city</field>
    <field name="view_mode">list,form</field>
  </record>

  <menuitem id="menu_it_root" name="Localizzazione IT" parent="base.menu_custom" sequence="40"/>
  <menuitem id="menu_it_city" name="Comuni" parent="menu_it_root" action="action_it_city" sequence="10"/>
</odoo>